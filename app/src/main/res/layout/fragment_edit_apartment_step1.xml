<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.host.room.edit.EditApartmentStep1Fragment">

    <RelativeLayout
        android:layout_marginTop="@dimen/margin20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20">
        <TextView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size20"
            android:text="X"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_24"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <include
        android:id="@+id/layout_room_type"
        layout="@layout/item_drop_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginHorizontal="@dimen/margin20" />

    <include
        android:id="@+id/layout_name"
        layout="@layout/item_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10" />

    <include
        android:id="@+id/layout_city"
        layout="@layout/item_drop_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10" />

    <include
        android:id="@+id/layout_district"
        layout="@layout/item_drop_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10" />

    <include
        android:id="@+id/layout_street"
        layout="@layout/item_drop_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10" />

    <include
        android:id="@+id/layout_description"
        layout="@layout/item_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10"
        android:text="Detail (optional)"
        android:textColor="@color/black"
        android:textSize="@dimen/size15"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20"
        android:layout_marginTop="@dimen/margin5"
        android:background="@android:color/transparent"
        android:hint="Detail"
        android:lines="5"
        android:textSize="@dimen/size15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Background image"
            android:textColor="@color/black"
            android:textSize="@dimen/size15"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im_camera"
            android:layout_width="@dimen/height20"
            android:layout_height="@dimen/width20"
            android:background="@color/black"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>