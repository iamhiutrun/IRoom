<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin20"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_city"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/width50"
        android:layout_height="@dimen/height50"/>

    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:textSize="@dimen/size10"
        android:text="@string/hanoi"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/im_city"
        app:layout_constraintStart_toStartOf="@+id/im_city"
        app:layout_constraintTop_toBottomOf="@+id/im_city" />

</androidx.constraintlayout.widget.ConstraintLayout>